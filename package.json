{
  "name": "briend",
  "version": "1.0.0",
  "scripts": {
    "dev:web": "turbo run --cwd packages/web dev",
    "dev:app": "bun run --cwd packages/container start",
    "install": "bun install --cwd packages/web && bun install --cwd packages/container",
    "clean": "rm -rf node_modules && rm -rf packages/*/node_modules",
    "update:env": "bun run --cwd packages/web update:env",
    "kill:ports": "kill-port 3000 3001 3002 8081 || true",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "kill-port": "^2.0.1",
    "turbo": "^2.5.0"
  },
  "peerDependencies": {
    "typescript": "^5.8.2"
  },
  "packageManager": "bun@1.2.10"
}
